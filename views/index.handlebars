
<div class="jumbotron">
    <h1>Voting App</h1>
    <p class="lead">A voting webapp that lets you create polls and vote on anybody else's polls.</p>
    {{#if user}}
    <p><a class="btn btn-lg btn-success" href="/users/{{user.username}}" role="button">Dashboard</a></p>
    {{else}}
    <p><a class="btn btn-lg btn-success" href="/users/register" role="button">Sign up today</a></p>
    {{/if}}
</div>
<h3>All polls</h3>
<p>Click on one to vote. You can also register/login to create a new poll.</p>
{{#if polls}}
	{{#each polls}}
		<div id="{{this.title}}" class=" alert alert-success " onclick="singlePoll(this.id)">
			{{this.title}}
		</div>
	{{/each}}
{{/if}}
<script>
	$(document).ready(function() {
		$("#home-link").addClass("active");
	});
</script>